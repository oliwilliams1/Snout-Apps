{
  "name": "snout-apps",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:css-release": "tailwindcss -i ./src/styles.css -o ./src/output.css",
    "build:vite-release": "tsc && vite build",
    "tauri:build-release": "tauri build",
    "build": "build:css-release && build:vite-release && tauri build",
    "build:css": "tailwindcss -i ./src/styles.css -o ./src/output.css --watch",
    "build:vite": "tsc && vite build --watch",
    "tauri:dev": "tauri dev",
    "dev": "concurrently \"npm run build:vite\" \"npm run tauri:dev\" \"npm run build:css\""
  },
  "dependencies": {
    "@octokit/core": "^6.1.2",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/node": "^22.7.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^7.6.0",
    "js-yaml": "^4.1.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.3.1"
  }
}
