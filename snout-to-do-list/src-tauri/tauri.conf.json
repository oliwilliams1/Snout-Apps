{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "snout-to-do-list",
  "version": "0.1.0",
  "identifier": "com.snout-to-do-list.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "snout-to-do-list",
        "width": 500,
        "height": 750,
        "decorations": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
